{
  "compilerOptions": {
    "outDir": "./lib/",
    "target": "es5",
    "lib": [
      "es5", "es6", "dom"
    ],
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
  },
  "include": ["./src/**/*", "**/*.spec.tsx", "**/*.spec.ts"],
  "exclude": []
}
